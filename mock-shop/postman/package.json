{
  "name": "mock-shop-api-tests",
  "version": "1.0.0",
  "description": "API testing suite for Mock Shop e-commerce application",
  "main": "run-api-tests.js",
  "scripts": {
    "test": "node run-api-tests.js smoke",
    "test:full": "node run-api-tests.js full",
    "test:smoke": "node run-api-tests.js smoke",
    "test:security": "node run-api-tests.js security",
    "test:performance": "node run-api-tests.js performance",
    "test:auth": "node run-api-tests.js auth",
